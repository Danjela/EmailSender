{% extends 'base.html.twig' %}

{% block title %}Email index{% endblock %}

{% block body %}
    <h1>Email index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SendTo</th>
                <th>Subject</th>
                <th>Body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email in emails %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.sendTo }}</td>
                <td>{{ email.subject }}</td>
                <td>{{ email.body }}</td>
                <td>
                    <a href="{{ path('email_show', {'id': email.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('email_edit', {'id': email.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('email_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
