{% extends 'base.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>SendTo</th>
                <td>{{ email.sendTo }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ email.subject }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ email.body }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('email_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('email_edit', {'id': email.id}) }}" class="btn btn-primary">edit</a>

    {{ include('email/_delete_form.html.twig') }}
{% endblock %}
